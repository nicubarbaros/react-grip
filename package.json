{
  "name": "react-grip",
  "private": false,
  "version": "0.0.2",
  "type": "module",
  "description": "A React component for resizable containers with smooth drag interactions",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/react-grip.umd.js",
  "module": "./dist/react-grip.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-grip.es.js",
      "require": "./dist/react-grip.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "babel-plugin-react-css-modules": "^5.2.6",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.0.12",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "typescript",
    "resizable",
    "drag",
    "grip",
    "container"
  ],
  "author": "Nicu Barbaros",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicubarbaros/react-grip"
  },
  "bugs": {
    "url": "https://github.com/nicubarbaros/react-grip/issues"
  },
  "homepage": "https://github.com/nicubarbaros/react-grip#readme"
}
